@model DoctorAppointmentManagement.Contracts.Doctor
@{ Layout = "AdminLayout";}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Doctor</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name">

            </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">
                <span asp-validation-for="Description" class="text-danger" ></span>
            </label>
            <input asp-for="Description" class=" form-control" disabled />
        </div>
        <div class="mb-3">
        <label asp-for="Fees">
            <span asp-validation-for="Fees" class="text-danger"></span>
        </label>
        <input asp-for="Fees" class="form-control" disabled/>
    </div>
        <div class="mb-3">
            <label asp-for="ProfilePictureFile ">
                <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
            </label>
            <input asp-for="ProfilePictureFile" class="form-control" disabled />
        </div>
       
        <button type="submit" class="btn btn-outline-danger" style="width:150px">Delete</button>
        <a asp-controller="AdminDoctor" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}